@model QUANGHANH2.Models.HoSo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa hồ sơ</title>
</head>
<body>

    <div id="hoso_edit_model">
        @using (Html.BeginForm("EditHoSo", "Brief", FormMethod.Post, new { onSubmit = "return SubmitForm(this) " }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <strong for="worker-numb">Trạng thái hố sơ</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TrangThaiHoSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TrangThaiHoSo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Ngày nhận hồ sơ</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayNhanHoSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayNhanHoSo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Người giao hồ sơ</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NguoiGiaoHoSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NguoiGiaoHoSo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Cam kết tuyển dụng</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CamKetTuyenDung, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CamKetTuyenDung, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Quyết định tiếp nhận DVC</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.QuyetDinhTiepNhanDVC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QuyetDinhTiepNhanDVC, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Quyết định chấm dứt hợp đồng DVC</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.QDChamDutHopDongDVC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QDChamDutHopDongDVC, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">NLD Theo chỉ tiêu CTDT</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NLDHocTheoChiTieuCTDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NLDHocTheoChiTieuCTDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Người bàn giao hồ sơ nhập kho</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NguoiBanGiaoBangNhapKho, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NguoiBanGiaoBangNhapKho, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong for="worker-numb">Người giữ hồ sơ</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NguoiGiuHoSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NguoiGiuHoSo, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.MaNV)

                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="waves-light btn blue darken-2 white-text" />
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>
