<script>
    $(document).ready(function() {
        var macongviec;
        var tencongviec;
        var thangluong;
        var phucap;
        //fill data to input
        $("#congviec").on("click", "#suaCongViec", function() {
            macongviec = $(this).attr("name");
            getData(macongviec);
        });

        //update
        $("#xacNhanSuaCongViec").click( function() {
            tencongviec = $("#tenCongViec_sua").val();
            thangluong = $("#thangLuong_sua").val();
            phucap = $("#phuCap_sua").val();
            update(macongviec, tencongviec, thangluong, phucap);
        });
    });
</script>
<!--------Get data by MaCongViec------->
<script>
    function getData(macongviec) {
        $("#pre-load").show(),
            $.ajax({
                url: "/phong-tcld/quan-ly-cong-viec/lay-du-lieu-theo-macongviec",
                type: "POST",
                datatype: "json",
                data: {
                    "macongviec": macongviec
                },
                success: function (response) {
                    if (response.success) {
                        //fill data to input in modal suaCongViec
                        $("#tenCongViec_sua").val(response.tencongviec);
                        $("#thangLuong_sua").val(response.thangluong);
                        $("#phuCap_sua").val(response.phucap);
                        //hide the pre-loader
                        $("#pre-load").hide();
                    }
                },
                error: function (response) {

                }
            });
    }
</script>
<!--------Update------------>
<script>
    function update(macongviec, tencongviec, thangluong, phucap) {
        $("pre-load").show(),
            $.ajax({
                url: "/phong-tcld/quan-ly-cong-viec/cap-nhat-cong-viec",
                type: "POST",
                datatype: "json",
                data: {
                    "macongviec": macongviec,
                    "tencongviec": tencongviec,
                    "thangluong": thangluong,
                    "phucap": phucap
                },
                success: function(response) {
                    if (response.success) {
                        //close modal suaCongViec
                        $("#dongSuaCongViec").click();
                        //alert successfull updating
                        successAlert(response.title, response.message);
                        //reload table
                        table.ajax.reload();
                        //hide the pre-load
                        $("#pre-load").hide();
                    } else if (response.error) {
                        //alert fail updating
                        errorAlert(response.title, response.message);
                        $("#pre-load").hide();
                    }
                },
                error: function (response) {

                }
            });
    }
</script>
<!-----------------Delete------------------->
<script>
    $(document).ready(function () {
        var macongviec;
        $("#congviec").on("click", "#xoaCongViec", function () {
            macongviec = $(this).attr("name");
            //alert confirm
            confirmAlert("Xác nhận xóa?", "Xác nhân xóa công việc", () => { delete_congviec(macongviec); });
        });
    });
</script>
<script>
    function delete_congviec(macongviec) {
        $("#pre-load").show(),
            $.ajax({
                url: "/phong-tcld/quan-ly-cong-viec/xoa-cong-viec",
                type: "POST",
                datatype: "json",
                data: {
                    "macongviec": macongviec
                },
                success: function (response) {
                    if (response.success) {
                        //alert successfull deleting 
                        successAlert(response.title, response.message);
                        //reload table
                        table.ajax.reload();
                        //hide the pre-loader
                        $("#pre-load").hide();
                    } else if (response.error) {
                        //alert fail deleting
                        errorAlert(response.title, response.message);
                        //hide the pre-loader
                        $("#pre-load").hide();
                    }
                },
                error: function (response) {
                    
                }
            })
    }
</script>