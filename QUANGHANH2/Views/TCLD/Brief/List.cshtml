                    <div id="containerOption2" class="col s6 m6 l6" style="display: none">
                        <label>
                            <input id="else1" name="group2" type="radio" value="Hết hạn HĐLĐ" checked />
                            <span>Hết hạn HĐLĐ</span>
                        </label>
                        <br />
                        <label>
                            <input id="else2" name="group2" type="radio" />
                            <span><input id="else" name="elseCase" class="form-control" placeholder="Trường hợp khác" required disabled /></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn blue darken-2 modal-close">Xác nhận</button>
                <input type="hidden" name="id" id="tlhdd" />
                <button type="button" class="btn blue darken-2 modal-close">Hủy</button>
            </div>
        }
