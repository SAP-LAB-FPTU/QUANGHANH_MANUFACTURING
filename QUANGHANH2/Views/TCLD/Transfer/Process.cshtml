    <script>
        function step3() {
            $("#pre-load").show("slow", function () {
            });
            var selectedList = [];
            for (var i = 0; i < arrCarSelected.length; i++) {
                //var date = $("#thoigian-" + arrCarSelected[i]).val().split('-');
               
                var obj = {
                    'SoQD': $("#so-quyet-dinh").val(),
                    'MaNV': arrCarSelected[i],
