                        //////////////////////CHU VU//////////////////////
                        $(".chucvu").keydown(function (e) {
                        });
                        /////////////////////NGAY//////////////////////
                        $(".thoigian").keydown(function (e) {
                            e.preventDefault();
                        });
                        $("#pre-load").hide("slow", function () {
                        });
                    } else {

                    }
                },
