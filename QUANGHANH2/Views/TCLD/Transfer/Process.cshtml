                    'MucLuong': joinArr($("#luong-" + arrCarSelected[i]).val().split(',')),
                    'ThangBacLuong': joinArr($("#thang-" + arrCarSelected[i]).val().split(',')),
                    'PhuCap': joinArr($("#phucap-" + arrCarSelected[i]).val().split(',')),
                    'DonViMoi': $("#donvi-" + arrCarSelected[i]+" :selected").text(),
                    'ChucVu': {
