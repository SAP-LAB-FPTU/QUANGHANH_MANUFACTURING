                    $("#pre-load").show();
                    $.ajax({
                        dataType: "json",
                        contentType: "application/json, charset=utf-8",
                        type: 'POST',
                        url: '/phong-cdvt/xin-cap-vat-tu-sctx-summary/submit',
                        data: JSON.stringify(data),
                        success: function (res) {
                            $("#pre-load").hide();
