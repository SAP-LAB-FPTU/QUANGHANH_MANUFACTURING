                else
                drawTable();
            });
            $("#submit").click(function () {
                var xincap = [];
                for (var i = 0; i < lists.length; i++) {
                   var newData = {}
                    newData.SupplyQuantity = $("#quantity-" + lists[i].Equipmentid + "-" + lists[i].SupplyId).val();
