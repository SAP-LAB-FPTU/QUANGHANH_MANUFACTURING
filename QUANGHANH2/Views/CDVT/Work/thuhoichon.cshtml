
@{
    ViewData["Title"] = "thuhoichon";
    Layout = "~/Views/Shared/_Layout_CDVT.cshtml";
}
<link href="~/dist/css/style.css" rel="stylesheet">
<!-- This page CSS -->
<link href="~/dist/css/pages/data-table.css" rel="stylesheet">

<link href="~/assets/Custom css/CDVT/TABLE_BORDERED.css" rel="stylesheet" />
<link href="~/lib/datepicker_src/dist/css/datepicker.min.css" rel="stylesheet" type="text/css">
<link href="~/lib/datepicker_src/css/style.css" rel="stylesheet " type="text/css ">
<link href="~/lib/datepicker_src/dist/css/datepicker.min.css " rel="stylesheet " type="text/css ">
<link href="~/lib/datepicker_src/dist/css/custom.css " rel="stylesheet " type="text/css ">
<link href="~/lib/datepicker_src/dist/css/font.css" rel="stylesheet" type="text/css">
<script src="~/lib/datepicker_src/dist/js/datepicker.js"></script>
<script src="~/lib/datepicker_src/dist/js/i18n/datepicker.vi.js"></script>

<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col m12">
                <div class="center">
                    <h3><b>CHI TIẾT THU HỒI</b></h3>
                </div>
                @if (ViewBag.validate == 0)
                {
                    <h4>Bạn đã chọn 2 hoặc nhiều thiết bị khác vị trí, xin vui lòng quay lại</h4>
                }
                else
                {
                    <form method="post" id="myform">
                        <div class="col s3 m3">
                            <textarea name="data" hidden value="" id="json"></textarea>
                            <input name="documentary_code" class="form-control" type="text" placeholder="Nhập mã quyết định" />
                        </div>
                        <div class="col s3 m3">
                            <input name="out_in_come" class="form-control" type="text" required placeholder="Nhập nguồn vốn" />
                        </div>
                        <div class="col s3 m3">
                            <input class="form-control" type="text" disabled value="@ViewBag.department_name" />
                            <input name="department_id" type="hidden" readonly value="@ViewBag.department_id" />
                        </div>
                        <div class="col s3 m3">
                            <input name="reason" class="form-control" type="text" required placeholder="nội dung quyết định" />
                        </div>
                        <div class="col s12 table_container">
                            <table id="mytablevattu" class="striped table-responsive centered table-bordered">
                                <thead>
                                    <tr>
                                        <th class="center-align">Mã thiết bị<span></span></th>
                                        <th class="center-align">Tên thiết bị<span></span></th>
                                        <th class="center-align">Tình trạng thiết bị<span></span></th>
                                        <th class="center-align">Lý do thu hồi (Không bắt buộc)<span></span></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < ViewBag.DataThietBi.Count; i++)
                                    {
                                    <tr id="@i">
                                        <td>@ViewBag.DataThietBi[i].equipmentId</td>
                                        <td>@ViewBag.DataThietBi[i].equipment_name</td>
                                        <td>@ViewBag.DataThietBi[i].current_Status</td>
                                        <td>
                                            <input type='text' class='form-control' />
                                        </td>
                                        <td>
                                            <a class="btn blue darken-2 modal-trigger open-Modal" data-id="@i" href="#mylist">Vật tư đi kèm</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                    <div class="col l12 m12 s12 center">
                        <a onclick="inQuyetDinh()" class="btn blue darken-2">Xuất quyết định</a>
                        <a id="submit" class="btn blue darken-2 modal-trigger">Xác nhận thu hồi thiết bị</a>
                        <a href="thu-hoi" class="btn blue darken-2 ">Quay lại</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal" id="mylist">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title" id="listId"></h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <form>
                    <table id="test" class="striped table-responsive center table-bordered mytable">
                        <thead>
                            <tr>
                                <th>Mã vật tư</th>
                                <th>Số lượng</th>
                                <th>Tình trạng kỹ thuật</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type='text' list='supplyID' class='form-control required' /></td>
                                <td><input type='number' min='1' value='1' class='form-control' /></td>
                                <td><select class='form-control'><option>Mới 100%</option><option>Cũ đã qua sử dụng</option></select></td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
            <input type="hidden" id="rownumber" disabled />
        </div>
        <div class="modal-footer">
            <a id="addcolumn" class="waves-effect waves-light btn blue darken-2 left">Thêm</a>
            <a id="submitvattu" class="waves-effect waves-light btn blue darken-2 modal-close">Lưu</a>
            <button type="button" class="btn light-blue lighten-1 modal-close" id="exit-button">Thoát</button>
        </div>
    </div>
</div>

<div class="modal" id="confirm">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Bạn có muốn tạo quyết định này không?</h3>
        </div>
        <div class="modal-footer">
            <a id="create" class="waves-effect waves-light btn blue darken-2 center">Tạo</a>
            <a class="btn light-blue lighten-1 modal-close center">Thoát</a>
        </div>
    </div>
</div>

<datalist id="supplyID">
    @foreach (var item in ViewBag.Supplies)
    {
        <option value="@item.supply_id">@item.supply_name</option>
    }
</datalist>

<datalist id="departmentName">
    @foreach (var item in ViewBag.Departments)
    {
        <option value="@item.department_id">@item.department_name</option>
    }
</datalist>

<script>
    var output = {};

    $(document).ready(function () {
        $('input[required]').each(function myfunction() {
            $(this).attr("oninvalid", "setCustomValidity('Không được bỏ trống ô này')");
            $(this).attr("oninput", "this.setCustomValidity('')");
        })
    })

    $('.minDate').datepicker({
        language: 'vi',
        minDate: new Date() // Now can select only dates, which goes after today
    })

    $(document).ready(function () {
        $('.datepicker-inline').remove();
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;
        $(".minDate").each(function () {
            $(this).val(today);
        });
    })
    //đọc lại json rồi apply vào modal
    $(document).on("click", ".open-Modal", function () {
        var id = $(this).data('id');
        $('#rownumber').val(id);
        $("#test").find("tr:gt(0)").remove();
        $('#listId').text("Danh sách vật tư đi kèm của thiết bị " + $('#' + id + ' td:first-child').text())
        if (output.hasOwnProperty(id)) {
            for (var i = 0; i < output[id].vattu.length; i++) {
                var item = output[id].vattu[i];
                var $tr = $('<tr>').append(
                    $('<td>').html("<input type='text' list='supplyID' class='form-control required' value='" + item.supply_id + "' /> "),
                    $('<td>').html("<input type='number' min='1' value='1' class='form-control' value='" + item.quantity + "' /> ")
                );
                if (item.supplyStatus == 'Qua sử dụng')
                    $tr.append($('<td>').html("<select class='form-control'><option>Mới 100%</option><option selected>Qua sử dụng</option></select> "))
                else
                    $tr.append($('<td>').html("<select class='form-control'><option>Mới 100%</option><option>Qua sử dụng</option></select> "))
                $tr.appendTo('#test tbody');
            }
        }
    })

    $("#addcolumn").click(function () {
        var $tr = $('<tr>').append(
            $('<td>').html("<input type='text' list='supplyID' class='form-control required' />"),
            $('<td>').html("<input type='number' min='1' value='1' class='form-control' />"),
            $('<td>').html("<select class='form-control'><option>Mới 100%</option><option>Qua sử dụng</option></select>"),
        );
        $tr.appendTo('#test tbody');
    });
    //tạo json cho thiết bị khi nhập submit vật tư
    $("#submitvattu").click(function () {
        if ($('#mylist #test tr').length > 1) {
            var thietbi = {};
            var arr = [];
            var rownumber = $('#rownumber').val();
            thietbi.id = $('#' + rownumber + ' td:first-child').text();
            for (var i = 1; i < $('#test tbody tr').length + 1; i++) {
                if ($('#mylist #test tbody tr:nth-child(' + i + ') input').eq(0).val() != "" &&
                    $('#mylist #test tbody tr:nth-child(' + i + ') input').eq(2).val() != "") {
                    var vattu = {};
                    vattu.supply_id = $('#mylist #test tbody tr:nth-child(' + i + ') input').eq(0).val();
                    vattu.quantity = $('#mylist #test tbody tr:nth-child(' + i + ') input').eq(1).val();
                    vattu.supplyStatus = $('#mylist #test tbody tr:nth-child(' + i + ') select').val();
                    arr.push(vattu);
                }
            }
            thietbi.vattu = arr;
            output[rownumber] = thietbi;
        }
    })

    $(document).ready(function () {
        for (var i = 0; i < $('#mytablevattu tbody tr').length; i++) {
            var thietbi = {};
            var arr = [];
            thietbi.id = $('#mytablevattu tbody tr:nth-child(' + (i + 1) + ') td').eq(0).text();
            thietbi.vattu = arr;
            output[i] = thietbi;
        }
    })
</script>
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        //validate
        $('#submit').click(function () {
            var validate = 1;
            $(':input[required]:visible').each(function () {
                if ($(this).val() == "") {
                    $(this).focus();
                    validate = 0;
                }
            })
            if (validate == 1) {
                if (Object.keys(output).length < $('#mytablevattu tbody tr').length)
                    $.notify("phải điền đầy đủ vật tư vào thiết bị", {
                        globalPosition: "top center",
                        className: "error"
                    });
                else {
                    for (var key in output) {
                        output[key].equipment_revoke_reason = $('#' + key + ' input').eq(0).val();
                    }
                    $('#json').val(JSON.stringify(output))
                    $('#confirm').modal("open");

                }
            } else
                $.notify("không được bổ trống ô này", {
                    globalPosition: "top center",
                    className: "error"
                });
        })

        $('#create').click(function () {
            $('#myform').submit();
        })
    </script>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script src="~/js/Custom JS/CDVT/Work/Mobilize_PlaceAndTime.js"></script>
    <script src="~/js/Custom JS/CDVT/Work/suachuachon.js"></script>
}