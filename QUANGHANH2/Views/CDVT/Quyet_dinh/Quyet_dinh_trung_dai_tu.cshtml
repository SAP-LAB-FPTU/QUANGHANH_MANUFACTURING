                            else {
                                return "<a></a>";
                            }
                        }
                    },
                    { "data": "person_created", "name": "person_created" },
                    { "data": "count", "name": "count" },
                    { "data": "reason" , "name" : "reason"},
                    { "data": "out_in_come" , "name" :"out_in_come" },
                    {
                       "data": "tempId", "render": function (data) {
                             return (data.split("^")[1] == "false" ) ? "<a href=\"#myupdate\" data-toggle=\"modal\" class=\"open-UpdateModal waves-effect waves-light btn blue darken-1 modal-trigger\" data-incident-id=\"" + data.split("^")[0] + "\">Cập&nbsp;nhật</a>" : "<a href=\"#myedit\" data-toggle=\"modal\" class=\"open-EditModal waves-effect waves-light btn blue darken-1 modal-trigger\" data-incident-id=\"" + data.split("^")[0] + "\">Chỉnh&nbsp;sửa</a>";
                                    },
                        "orderable": false,
                        "searchable":false,

                    }
                ],
                "serverSide": "true",
                "order": [0, "asc"],
                "lengthChange": false,
                    "searching": false,
                 "initComplete": function () {
                    $("#pre-load").hide();
                }
            });

        });

            function GetData(url) {
            window.location.href = url;
        }
//-------------- format Date ------------------------------
            function dateFormat2(d) {
            var dateString = d.substr(6);
            var currentTime = new Date(parseInt(dateString));
            var month = currentTime.getMonth() + 1;
            var day = currentTime.getDate();
            var year = currentTime.getFullYear();
            var date = day + "/" + month + "/" + year;
            return (date);
            }
             $('.maxDate').datepicker({
        language: 'vi',
        maxDate: new Date(),
        minDate: new Date("1/1/1900")
    })
    $('.minDate').datepicker({
        language: 'vi',
        maxDate: new Date() // Now can select only dates, which goes after today
    })
    $(document).ready(function () {
        $('.datepicker-inline').remove();
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;
        $(".minDate").each(function () {
            $(this).val(today);
        });
        today = new Date("1/1/1900");
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;
        $(".maxDate").val(today)
    });


//---------------Search Data -----------------



        $("#searchButton1").click(function () {

            $("#pre-load").show();
            dataTable.ajax.reload();
            });


 //--------------Get Data--------------------

         $(document).on("click", ".open-EditModal", function () {
             var id = $(this).data('incident-id').toString();
             var ListId = [id];
            $.ajax({
                type: "POST",
                url: "/danhsachtrungdaitu/GetById",
                contentType: "application/json",
                dataType: "json",
                data: '{docID: ' + JSON.stringify(ListId) + '}',
                success: function (data) {
                       $("#documentary_id_edit").val(data.documentary_id);
                    $("#date_created_edit").val(dateFormat2(data.date_created));
                    $('#documentary_code_edit').val(data.documentary_code);
                    $('#person_created_edit').val(data.person_created);
                    $('#reason_edit').val(data.reason);
                    $('#out_in_come_edit').val(data.out_in_come);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $.notify(XMLHttpRequest.responseText, {
                        globalPosition: "top center",
                        className: "error"
                    });
                },
                cache: false
            })
     });
//------------------------Export Excel------------------------

            $("#ExportExcel").click(function () {
            $("#pre-load").show();
            $("#pre-load").css("z-index", "9999");
            $.ajax({
                url: '@Url.Action("ExportExcel","danhsachtrungdaitu")',
                type: 'POST',

            }).done(function () {
                window.location.href = "/excel/CDVT/download/TrungTuThietBi.xlsx";
                 $("#pre-load").hide();
            })
        });

 //--------------Edit--------------------
       $("#myeditform").submit(function (e) {
           $("#pre-load").show();
                $.ajax({
                    type: "POST",
                    url: "/phong-cdvt/quyet-dinh/trung-dai-tu/edit",
                    dataType: "text",
                    success: function () {
                        dataTable.ajax.reload();
                        $.notify("Chỉnh sửa thành công", {
                            globalPosition: "top center",
                            className: "success"
                        })

                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $('#pre-load').hide();
                        $.notify(XMLHttpRequest.responseText, {
                            globalPosition: "top center",
                            className: "error"
                        });
                    },
                    data: {
                          documentary_id: $('#documentary_id_edit').val(),
                        documentary_code: $('#documentary_id_code').val(),
                        date_created: $('#date_created_edit').val().split(/\//).reverse().join('/'),
                        person_created: $('#person_created_edit').val(),
                        reason: $('#reason_edit').val(),
                        out_in_come: $('#out_in_come_edit').val()

                    },
                    cache: false
                }).done(function () {
                    $('#pre-load').hide();
                    $('#exit-edit-button').click();
                })
                return false;
            });
//------------Update---------------------

         $("#myupdateform").submit(function (e) {
           $("#pre-load").show();
                $.ajax({
                    type: "POST",
                    url: "/phong-cdvt/quyet-dinh/sua-chua/update",
                    dataType: "text",
                    success: function () {
                        dataTable.ajax.reload();
                        $.notify("Update thành công", {
                            globalPosition: "top center",
                            className: "success"
                        })

                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $('#pre-load').hide();
                        $.notify(XMLHttpRequest.responseText, {
                            globalPosition: "top center",
                            className: "error"
                        });
                    },
                    data: {

                        documentary_id: $('#documentary_id_update').val(),
                        documentary_code: $('#UpdateCode').val(),


                    },
                    cache: false
                }).done(function () {
                    $('#pre-load').hide();
                    $('#exit-update-button').click();
                })
                return false;
            });

        $(document).on("click", ".open-UpdateModal", function () {
             var id = $(this).data('incident-id').toString();
             var ListId = [id];
            $.ajax({
                type: "POST",
                url: "/danhsachtrungdaitu/GetById",
                contentType: "application/json",
