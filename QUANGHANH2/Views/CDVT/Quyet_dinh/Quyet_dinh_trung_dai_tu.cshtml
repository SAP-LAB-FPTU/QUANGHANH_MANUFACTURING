 //--------------Get Data--------------------

       $(document).ready(function () {
            dataTable = $('#DocumnetaryTable').on('preXhr.dt', function (e, settings, data) {

                    $("#pre-load").show();
                    $("#pre-load").css("z-index", "9999");
