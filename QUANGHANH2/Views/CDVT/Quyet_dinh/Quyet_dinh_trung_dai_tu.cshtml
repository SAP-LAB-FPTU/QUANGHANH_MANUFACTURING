                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@{
    foreach (var item in right)
    {
        if (item.Equals("84"))
        {

            <form action="" method="POST" id="myeditform" role="form">
