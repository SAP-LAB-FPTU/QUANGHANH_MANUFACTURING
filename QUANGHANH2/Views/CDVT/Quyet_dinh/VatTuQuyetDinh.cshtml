@{
    Layout = "~/Views/Shared/_Layout_CDVT.cshtml";
}
<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col s12">
                <div class="center">
                    <h3>
                        <b>VẬT TƯ THIẾT BỊ</b>
                    </h3>
                </div>

                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s6"><a class="active" href="#thaythe">VẬT TƯ THAY THẾ</a></li>
                        <li class="tab col s6"><a class="active" href="#thuhoi">VẬT TƯ THU HỒI</a></li>
                    </ul>
                </div>
                <div id="thaythe" class="col s12">
                    <table class="striped centered table-bordered" id="thaythetable">
                        <thead>
                            <tr>
                                <th rowspan="2">Mã nhóm vật tư</th>
                                <th rowspan="2">Tên vật tư</th>
                                <th rowspan="2">ĐVT</th>
                                <th>Số lượng</th>
                                <th>Tình trạng kỹ thuật</th>
                            </tr>
                        </thead>

                        <tbody>
                            @for (int i = 0; i < ViewBag.ListSup.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr>
                                        <td rowspan="2">@ViewBag.ListSup[i].equipmentId</td>
                                        <td rowspan="2">@ViewBag.ListSup[i].supply_name</td>
                                        <td rowspan="2">@ViewBag.ListSup[i].unit</td>
                                        <td>@ViewBag.ListSup[i].quantity</td>
                                        <td>@ViewBag.ListSup[i].supplyStatus</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>@ViewBag.ListSup[i].quantity</td>
                                        <td>@ViewBag.ListSup[i].supplyStatus</td>
                                    </tr>
                                }
                            }
                            @*@if (ViewBag.ListSup.Count > 0)
                            {
                            <td colspan="5">Kết quả: @ViewBag.ListSup[0].documentary_process_result</td>
                            }
                            else
                            {
                                <td colspan="5">Không có dữ liệu</td>
                            }*@
                            @if(ViewBag.ListSup.Count == 0)
                            {
                                <td colspan="5">Không có dữ liệu</td>
                            }

                            </tbody>
                        </table>
                </div>
                <div id="thuhoi" class="col s12">
                    <table class="striped centered table-bordered">
                        <thead>
                            <tr>
                                <th rowspan="2">Mã nhóm vật tư</th>
                                <th rowspan="2">Tên vật tư</th>
                                <th>ĐVT</th>
                                <th>Số lượng</th>
                                <th>Tình trạng kỹ thuật</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < ViewBag.ListSup2.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr>
                                        <td rowspan="2">@ViewBag.ListSup2[i].equipmentId</td>
                                        <td rowspan="2">@ViewBag.ListSup2[i].supply_name</td>
                                        <td rowspan="2">@ViewBag.ListSup2[i].unit</td>
                                        <td>@ViewBag.ListSup2[i].quantity</td>
                                        <td>@ViewBag.ListSup2[i].supplyStatus</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>@ViewBag.ListSup2[i].quantity</td>
                                        <td>@ViewBag.ListSup2[i].supplyStatus</td>
                                    </tr>
                                }
                            }
                            @*@if (ViewBag.ListSup2.Count > 0)
                            {
                            <td colspan="5">Kết quả: @ViewBag.ListSup2[0].documentary_process_result</td>
                            }
                            else
                            {
                                <td colspan="5">Không có dữ liệu</td>
                            }*@
                            @if(ViewBag.ListSup2.Count == 0)
                            {
                                <td colspan="5">Không có dữ liệu</td>
                            }
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>



