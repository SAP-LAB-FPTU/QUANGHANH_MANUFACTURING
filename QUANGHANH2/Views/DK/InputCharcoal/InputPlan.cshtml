
@{
    ViewBag.Title = "InputPlan";
    Layout = "~/Views/Shared/_Layout_DK.cshtml";
}
<link href="~/assets/extra-libs/prism/prism.css" rel="stylesheet" />
<link href="~/dist/css/pages/data-table.css" rel="stylesheet" />
<link href="~/assets/Custom css/DK/InputPlan/InputPlan.css" rel="stylesheet" />
<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col s12">
                <h3 class="center"><b>KẾ HOẠCH KỸ THUẬT CÔNG NGHỆ</b></h3>
            </div>
        </div>
        <!-- Date Picker -->
        <div class="row row-align">
            <div class="col s12">
                <h5 class="center">
                    Tháng
                    <input type="text"
                           class="datepicker-here center"
                           data-language='vi'
                           data-min-view="months"
                           data-view="months"
                           data-date-format="MM" value="6" />
                    Năm
                    <input type="text"
                           class="datepicker-here center"
                           data-language='vi'
                           data-min-view="years"
                           data-view="years"
                           data-date-format="yyyy"
                           value="2019" />
                </h5>
            </div>
        </div>
        <!-- Dropdown Trigger -->
        <div class="row row-align">
            <div class="col s12">
                <a class='dropdown-trigger btn' href='#' data-target='phanxuong'>Chọn phân xưởng</a>
                <a class='dropdown-trigger btn' href='#' data-target='donvi'>Chọn đơn vị</a>
                <a class='dropdown-trigger btn' href='#' data-target='phongban'>Chọn phòng ban</a>
            </div>
        </div>
        <!-- Table -->
        <div class="row row-align">
            <div class="col s12 table-responsive">
                <table id="input_table" class="table table-bordered center">
                    <thead>
                        <tr>
                            <th>Tiêu chí</th>
                            <th>Sản lượng</th>
                            <th>Số ngày làm việc</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Dropdown phân xưởng -->
