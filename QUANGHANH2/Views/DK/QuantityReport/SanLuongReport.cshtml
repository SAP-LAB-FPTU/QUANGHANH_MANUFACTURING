
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SanLuongReport</title>
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/dist/js/materialize.min.js"></script>
    <script src="/assets/libs/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <link href="~/assets/Custom css/TABLE_BORDERED.css" rel="stylesheet" />
    <link href="~/assets/Custom css/form-input-border.css" rel="stylesheet" />
    <style>
        #table-container {
            overflow: scroll;
        }

        #yearCalendar {
            width: 15% !important;
            float: right;
        }

        #view-btn {
            float: left;
        }
        /*.sticky + .table-content {
          padding-top: 102px;
        }
            .sticky {
          position: fixed;
          top: 0;
          width: 100%;
        }*/
    </style>
</head>
<body>
    <div>
        <table class="centered highlight responsive-table striped responsive-table table-bordered" style="width:100%" id="reportTable">
            <thead id="tableHeader">
                <tr>
                    <th rowspan="2">STT</th>
                    <th rowspan="2">TOÀN CÔNG TY</th>
                    <th rowspan="2">BQKHDC THÁNG</th>
                    <th colspan="7"><span id="date">@ViewBag.date</span></th>
                    <th colspan="3">Tháng @ViewBag.date.Split('-')[1]</th>
                    <th colspan="2">C.LẠI THEO KHĐC</th>
                    <th rowspan="2">GHI CHÚ</th>
                </tr>
                <tr>
                    <th>K1</th>
                    <th>K2</th>
                    <th>K3</th>
                    <th><b>TH</b></th>
                    <th><b>KH</b></th>
                    <th>C.Lệch</th>
                    <th>%</th>
                    <th>Lũy kế</th>
                    <th>KHĐC(Tăng 3-5%)</th>
                    <th>% ĐC</th>
                    <th>Tổng</th>
                    <th>1 Ngày</th>
                </tr>
            </thead>
            <tbody class="table-content">
            </tbody>
        </table>

    </div>
    <script src="/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/notify.min.js"></script>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script>
        function changeDateFormat(date) {
            var x = date.split("-")
            return x[2] + '-' + x[1] + '-' + x[0];
        }
        $(document).ready(function () {
            $("#pre-load").show("slow", function () { });
            $.ajax({
                type: 'post',
                url: '/phong-dieu-khien/bao-cao-san-xuat-than/bao-cao-san-luong-toan-cong-ty',
                data: {
                    'date': changeDateFormat($("#date").text()),
                    "someData" : ""
                },
                success: function (response) {
                    data = JSON.parse(response.data);
                    content = "";
                    tieuchiName = ["TenTieuChi", "BQQHDC", "Ca1", "Ca2", "Ca3", "TH", "KH", "chenhlech", "percentage", "luyke", "KHDC", "percentageDC", "SUM", "perday", "GhiChu"]
                    let count = 1;
                    for (let index = 0; index < data.length; index++) {
                        content += "<tr>"
                        if (data[index]["isHeader"]) {
                            content += "<td></td>";
                            for (let i = 0; i < tieuchiName.length; i++) {
                                if (data[index][tieuchiName[i]] != null) {
                                    if (tieuchiName[i] == "chenhlech") {
                                        if (parseFloat(data[index][tieuchiName[i]]).toFixed(2) > 0) {
                                            content += "<td><b><span class=\"green-text\">" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</span></b></td>"
                                        } else {
                                            content += "<td><b><span class=\"red-text\">" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</span></b></td>"
                                        }
                                    } else {
                                        if (tieuchiName[i] != "TenTieuChi") {
                                            content += "<td><b>" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</b></td>"
                                        } else {
                                            content += "<td><b>" + (data[index][tieuchiName[i]]) + "</b></td>"
                                        }
                                    }
                                } else {
                                    if (tieuchiName[i] != "GhiChu") {
                                        content += "<td><b>" + 0 + "</b></td>"
                                    } else {
                                        content += "<td></td>"
                                    }
                                }
                            }
                            count = 1;
                        }
                        //
                        if (!data[index]["isHeader"]) {
                            content += "<td>" + count + "</td>";
                            for (let i = 0; i < tieuchiName.length; i++) {
                                if (data[index][tieuchiName[i]] != null) {
                                    if (tieuchiName[i] == "chenhlech") {
                                        if (parseFloat(data[index][tieuchiName[i]]).toFixed(2) > 0) {
                                            content += "<td><b><span class=\"green-text\">" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</span></b></td>"
                                        } else {
                                            content += "<td><b><span class=\"red-text\">" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</span></b></td>"
                                        }
                                    } else {
                                        if (tieuchiName[i] != "TenTieuChi") {
                                            content += "<td>" + parseFloat(data[index][tieuchiName[i]]).toFixed(2) + "</td>"
                                        } else {
                                            content += "<td>" + (data[index][tieuchiName[i]]) + "</td>"
                                        }
                                    }
                                } else {
                                    if (tieuchiName[i] != "GhiChu") {
                                        content += "<td>" + 0 + "</td>"
                                    } else {
                                        content += "<td></td>"
                                    }
                                }
                            }
                            count++;
                        }
                        content += "</tr>"
                    }
                    $("#reportTable").children("tbody").html(content);
                    $("#pre-load").hide("slow", function () { });
                },
                error: function (response) {
                }
            })
        });
    </script>
    
</body>
</html>
