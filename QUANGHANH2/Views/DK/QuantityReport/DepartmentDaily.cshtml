<script>
    $(document).ready(function () {
        let count = 0;
    });

    function changeDateFormat(date) {
        if (date == null || date == "") {
            return null;
        } else {
            var x = date.split("-")
            return x[2] + '-' + x[1] + '-' + x[0];
        }
    }

    function getInformation() {
        $("#pre-load").show("slow", function () { });
        $.ajax({
            type: 'post',
            url: '/phong-dieu-khien/bao-cao-san-xuat-than/bao-cao-san-luong-toan-cong-ty-theo-phan-xuong',
            data: {
                'date': changeDateFormat($("#yearCalendar").val()),
            },
            success: function (response) {
                data = JSON.parse(response.data);
                content = "";
                var ngay = $("#yearCalendar").val().split("-")[0];
                var thang = $("#yearCalendar").val().split("-")[1];
                var nam = $("#yearCalendar").val().split("-")[2];
                $("#date-cell").text("Ngày " + ngay + " tháng " + thang + " năm " + nam);
                $("#month-cell").text("Tháng " + thang);
                tieuchiName = ["TenTieuChi", "BQQHDC_display", "Ca1", "Ca2", "Ca3", "TH", "KH", "chenhlech", "percentage_display", "luyke", "KHBD", "KHDC", "percentageDC_display", "SUM", "perday_display", "GhiChu"]
                let count = 1;
                for (let index = 0; index < data.length; index++) {
                    content += "<tr>"
                    if (data[index]["isHeader"]) {
                        content += "<td colspan=\"17\"><b>" + data[index]["TenPhongBan"] + "</b></td>"
                        count = 1;
                    }
                    //
                    if (!data[index]["isHeader"]) {
                        content += "<td>" + count + "</td>";
                        for (let i = 0; i < tieuchiName.length; i++) {
                            if (data[index][tieuchiName[i]] != null) {

                                if (typeof (data[index][tieuchiName[i]]) === 'number') {
                                    var value = data[index][tieuchiName[i]];
                                    if (Math.floor(value) != value) {
                                        value = parseFloat(value).toFixed(1)
                                    } else {
                                        value = parseFloat(value).toFixed(0)
                                    }
                                    if (tieuchiName[i] == "chenhlech") {
                                        if (data[index][tieuchiName[i]] > 0) {
                                            content += "<td><b><span class=\"green-text\">" + value + "</span></b></td>"
                                        } else {
                                            content += "<td><b><span class=\"red-text\">" + value + "</span></b></td>"
                                        }
                                    } else {
                                        content += "<td>" + value + "</td>"
                                    }
                                } else {
                                    content += "<td>" + data[index][tieuchiName[i]] + "</td>"
                                }
                            } else {
                                if (tieuchiName[i] != "GhiChu") {
                                    content += "<td>" + 0 + "</td>"
                                } else {
                                    content += "<td></td>"
                                }
                            }
                        }
                        count++;
                    }
                    content += "</tr>"
                }
                $("#reportTable").children("tbody").html(content);
                $("#pre-load").hide("slow", function () { });
                var a = $("#reportTable > tbody > tr").length;
            },
            error: function (response) {
            }
        })
    }
</script>
<script>
    $("#export-button").click(function () {
        $("#pre-load").show("slow", function () { });
        $.ajax({
            type: 'post',
            url: '/phong-dieu-khien/bao-cao-san-xuat-than/export-excel',
            data: {
                'date': changeDateFormat($("#yearCalendar").val()),
            },
            success: function (res) {
                if (res.error) {
                    errorAlert(res.title, res.message);
                } else if (res.success) {
                    var response = JSON.parse(JSON.stringify(res.data));
                    window.location = '/phong-dieu-khien/bao-cao-san-xuat-than/download?fileGuid=' + response.FileGuid
                        + '&filename=' + response.FileName;
                }
                $("#pre-load").hide("slow", function () { });
            },
            error: function (response) {
                $("#pre-load").hide("slow", function () { });
                errorAlert('Không xuất được ra excel', 'Chưa có dữ liệu');
            }
        })
    });
</script>
