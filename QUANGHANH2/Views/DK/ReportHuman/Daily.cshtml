    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn blue" id="btn_agrr">Đồng ý</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn red">Hủy bỏ</a>
    </div>
</div>
<!------------Javascript--------------->
<script>
     var x = '@ViewBag.dat';

    //export fuction
    $("#export-button").click(function () {
        $("#pre-load").show();
        $.ajax({
            type: "POST",
            url: "/phong-dieu-khien/bao-cao-nhan-luc/bao-cao-nhan-luc-theo-ngay/export",
            data: {
                "date": x,
            },
            cache: false
        }).done(function () {
            window.location.href = "/excel/DK/baocaongay.xlsx";
            $("#pre-load").hide();
        })
    });

    function change() {
        var data = document.getElementById("data").value;
        document.getElementById("date").value = data;
        document.getElementById("form").submit();
    }

    $(document).ready(function () {
        $(".date-click").datepicker({
            onSelect: function (dateText) {
                change();
            }
        });
        document.getElementById("data").value = x;
    })
</script>
