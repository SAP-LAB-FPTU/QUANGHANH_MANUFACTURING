    ViewData["Title"] = "Daily";
    Layout = "~/Views/Shared/_Layout_DK.cshtml";
}
<link href="~/assets/Custom css/DK/ReportHuman/report.css" rel="stylesheet" />
<form id="form" action="/phong-dieu-khien/bao-cao-nhan-luc/bao-cao-nhan-luc-theo-ngay" method="post">
