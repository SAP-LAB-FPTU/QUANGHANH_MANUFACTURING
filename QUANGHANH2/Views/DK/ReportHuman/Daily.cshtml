                                    <th>LĐTT</th>
                                    <th>KT</th>
                                    <th>CĐ</th>
                                    <th>QL</th>

                                    <th>Tổng</th>
                                    <th>Vlđ</th>
                                    <th>Ốm</th>
                                    <th>P</th>
                                    <th>Khác</th>

