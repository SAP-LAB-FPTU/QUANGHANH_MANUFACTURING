                            @Html.ValidationMessageFor(model => model.GPS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Nhiên liệu</label>
                        <div class="col-md-10">
                            @Html.DropDownList("nhienlieu", new SelectList(ViewBag.listNL, "Text", "Value"), htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.nhienlieu, "", new { @class = "text-danger" })
                        </div>
