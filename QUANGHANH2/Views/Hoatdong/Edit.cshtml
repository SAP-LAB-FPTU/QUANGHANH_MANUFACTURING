        if (temp != "") {
            arr = temp.split("/");
            arr1 = arr[2].split(" ");
            data = arr[1] + "/" + arr[0] + "/" + arr1[0];
            document.getElementById("import_fix").value = data;
        }

        elms = document.querySelectorAll("[id='durationOfInspection']");
