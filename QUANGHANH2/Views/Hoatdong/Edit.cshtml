@using (Html.BeginForm("Edit", "Hoatdong", FormMethod.Post, new
{
    enctype = "multipart/form-data",
    onSubmit = "return UpdateEquipment(this);",
    data_restUrl = Url.Action("Edit", "Hoatdong")
